<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/medium_time"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <br.cta.ipev.commom.compat.instruments.SingleDisplay
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TEMPO DE VOO"
                style="@style/small_time"/>


            <Chronometer
                android:layout_width="match_parent"
                android:textSize="35sp"
                android:id="@+id/chrono_tempo_voo"
                android:layout_weight="1"
                style="@style/medium_time"
                android:gravity="center"
                android:layout_height="match_parent">

            </Chronometer>



        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            style="@style/medium_time"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INICIAR"
                android:layout_weight="1"
                android:id="@+id/buttonSTART_TIME">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZERAR"
                android:layout_weight="1"
                android:id="@+id/buttonZERO_TIME">

            </Button>

        </LinearLayout>




        <br.cta.ipev.commom.compat.instruments.SingleDisplay
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TOP"
            style="@style/medium_time"/>
        <br.cta.ipev.commom.compat.instruments.SingleDisplay
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/txtTOP"
            android:text="VALOR"
            style="@style/medium_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    style="@style/medium_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Zpi (ft)" />

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtZPI"
                    custom:decimalPlaces="0"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_text"
                    android:text="Vi (kias)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtVI"
                    custom:decimalPlaces="0"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="TREM"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="RECOLHIDO"
                    android:id="@+id/txtTREM"
                    custom:decimalPlaces="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="FLAPE (°)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtFLAPE"
                    custom:decimalPlaces="0"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="CAPOTA"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_value"
                    android:text="FECHADA"
                    android:id="@+id/txtCapota"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="BOOSTER"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="ON"
                    android:id="@+id/txtBooster"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="00:00"
                android:layout_weight="1"
                android:textSize="50sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:id="@+id/buttonSTART">

                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text="STOP"
                    android:id="@+id/buttonSTOP">

                </Button>

                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ZERAR"
                    android:layout_margin="5dp"
                    android:id="@+id/buttonZERO">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DETOT INICIAL: "
                    android:textSize="20sp"
                    android:typeface="normal"
                    android:textStyle="bold"
                    android:textColor="@color/black">

                </TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="     0    "
                    android:id="@+id/insereDETOT"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:inputType="numberDecimal"
                    android:textSize="25sp">
                </EditText>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salvar"
                    android:id="@+id/buttonDETOT">

                </Button>

            </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="EGT (°F)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtEGT"
                    custom:decimalPlaces="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="DETOT (l)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtDETOT"
                    custom:decimalPlaces="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_text"
                    android:text="TCC (°F)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtTCC"
                    custom:decimalPlaces="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="TA (°C)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtTA"
                    custom:decimalPlaces="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="@string/P_ADMIN"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtPadm"
                    custom:decimalPlaces="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="PÓleo (psi)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtPOLEO"
                    custom:decimalPlaces="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="RPM"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtRPM"
                    custom:decimalPlaces="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="TÓleo(°F)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtTOLEO"
                    custom:decimalPlaces="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/medium_text"
                    android:text="FF (l/h)"/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text="VALOR"
                    android:id="@+id/txtFF"
                    custom:decimalPlaces="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/small_text"
                    android:text=""/>
                <br.cta.ipev.commom.compat.instruments.SingleDisplay
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/big_value"
                    android:text=""
                    android:id="@+id/txtDETOT2"
                    custom:decimalPlaces="1"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>






</LinearLayout>